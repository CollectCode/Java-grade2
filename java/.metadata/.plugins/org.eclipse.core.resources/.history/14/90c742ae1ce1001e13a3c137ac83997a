import java.util.Scanner;

public class Note3    {
    public static void main(String args[])    {
        Scanner scn = new Scanner(System.in);
        int num = scn.nextInt();
        int[][] res = new int[num][2];
        
        for (int i = 0; i < num; i++)    {
            for (int j = 0; j < res[i].length; j++)    {
                res[i][j] = scn.nextInt();
            }
        }
        
        for (int k = 0; k < num; k++)    {
            System.out.println("Case #" + (k+1) + ": " + (res[k][0] + res[k][1]));
        }
    }
}